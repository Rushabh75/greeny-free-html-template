mixin hero(data)
	+b.SECTION.hero

		+e.row
			+e.slider.slider__
				+e.wrapper
					+e.slide
						+e.img--hero(src='assets/img/slider/1.jpg')
						+e.content--hero
							+e.H1.heading--hero This is a hero headline
							+e.H2.subheading--hero Learn more about it
							+e.BUTTON.button--hero.main-button--bg_accent2.main-button__ 
								+e.SPAN.text Learn more 
								+e.SVG.icon.arrow-icon__
									use(xlink:href='#arrow-icon__arrow2')
					+e.slide
						+e.img--hero(src='assets/img/slider/2.jpg')
						+e.content--hero
							+e.H1.heading--hero HELLO WORLD!
					+e.slide
						+e.img--hero(src='assets/img/slider/1.jpg')
				+e.pagination

		+e.boxes-row
			+b.hover-box--faded
